# ========================================
# HukuDok Environment Configuration
# ========================================
# Copy this file to .env and fill in your actual values

# ========================================
# SharePoint Configuration
# ========================================
SHAREPOINT_TENANT_ID=your-tenant-id-here
SHAREPOINT_CLIENT_ID=your-client-id-here
SHAREPOINT_CLIENT_SECRET=your-client-secret-here
SHAREPOINT_SITE_URL=https://yourcompany.sharepoint.com/sites/yoursite
SHAREPOINT_DRIVE_NAME=Documents

# SharePoint List Names
SHAREPOINT_LOG_LIST_NAME=log
SHAREPOINT_COUNTER_LIST_NAME=Counter

# SharePoint Folder Names
SHAREPOINT_FOLDER_HAM_NAME=01_HAM_ARSIV
SHAREPOINT_FOLDER_ISLENMIS_NAME=02_YEDEK_ARSIV
SHAREPOINT_TARGET_FOLDER=YourTargetFolder

# ========================================
# Gemini AI Configuration
# ========================================
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL_NAME=gemini-2.5-flash-lite

# ========================================
# Email Configuration
# ========================================
EMAIL_ENABLED=false
EMAIL_SENDER=notifications@yourcompany.com
EMAIL_TEST_MODE=true
EMAIL_TEST_RECIPIENT=your-test-email@yourcompany.com

# ========================================
# Application Settings
# ========================================
DEV_MODE=false

# Cache expiry in days
CACHE_EXPIRY_DAYS=30

# ========================================
# SSL/TLS Configuration (Optional)
# ========================================
# Path to custom SSL certificate bundle if needed
# SSL_CERT_FILE=/path/to/your/certificate.pem
